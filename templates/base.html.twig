<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex">
    <title>{% trans %}OurWeddinTitle{% endtrans %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
{% set locale=app.request.locale %}
<body class="{{ locale }}">



<div class="navbar navbar-expand-lg navbar-light site-header sticky-top py-1 text-center justify-content-center">
        <img src="{{ asset('build/images/ProjektLogo.png') }}" class="d-none d-lg-inline logo">
        <img src="{{ asset('build/images/ProjektLogo.png') }}" class="d-lg-none d-sm-inline logo">
</div>
<nav class="navbar navbar-expand-lg navbar-light site-header sticky-top ">
    <div class="ml-auto">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
    <div class="collapse navbar-collapse" id="navbarContent">
        <span class="navbar-nav mx-lg-auto" style="width: 92px"></span>
        <ul class="navbar-nav mx-auto">
            <li class="nav-item mx-auto">
                <a class="nav-link" href="{{ path('index') }}">{% trans %}home{% endtrans %}</a>
            </li>
            <li class="nav-item mx-auto">
                <a class="nav-link" href="/{{ locale }}#schedule">{% trans %}schedule{% endtrans %}</a>
            </li>
            <li class="nav-item mx-auto">
                <a class="nav-link" href="/{{ locale }}#approach">{% trans %}approach{% endtrans %}</a>
            </li>
            <li class="nav-item mx-auto">
                <a class="nav-link" href="{{ path('confirmation') }}">{% trans %}confirmation{% endtrans %}</a>
            </li>
            <li class="nav-item mx-auto">
                <a class="nav-link" href="{{ path('tipps') }}">{% trans %}tipps{% endtrans %}</a>
            </li>
            <li class="nav-item mx-auto">
                <a class="nav-link" href="{{ path('contact') }}">{% trans %}contact{% endtrans %}</a>
            </li>
        </ul>
        <ul class="navbar-nav mx-lg-auto">
            {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                <li class="nav-item mx-auto">
                    <a class="nav-link" href="/logout"> {% trans %}logout{% endtrans %} </a>
                </li>
            {% endif %}
            <li class="nav-item mx-auto">
                <a class="nav-link" href="/de"><img class="flag-icon"
                                                    src="{{ asset('build/images/iconfinder_Flag_of_Germany_96145.png') }}"/></a>
            </li>
            <li class="nav-item mx-auto">
                <a class="nav-link" href="/ua"><img class="flag-icon"
                                                    src="{{ asset('build/images/iconfinder_Flag_of_Ukraine_96351.png') }}"/></a>
            </li>
        </ul>


    </div>
</nav>


<div class="container-fluid header-image">
    <div class="row timer-boxes">
        <div class="container mx-auto my-auto ">
            <div class="row align-items-center justify-content-center ">
                <div class="col-sm-12 text-center">
                    <span class="d-inline-flex justify-content-center align-items-center header-text"> Let's get Married</span>
                </div>
            </div>
            <div class="row align-items-center justify-content-center flex-nowrap ">
                <div class="col-sm-1 align-self-center">
                <span id="wedding-time-days"
                      class="d-inline-flex justify-content-center align-items-center border rounded time">204</span>
                    <br/> <strong>{% trans %}days{% endtrans %} </strong>
                </div>
                <div class="col-sm-1">
                <span id="wedding-time-hours"
                      class="d-inline-flex justify-content-center align-items-center border rounded time">204</span>
                    <br/>
                    <strong>{% trans %}hours{% endtrans %}</strong>
                </div>
                <div class="col-sm-1">
                <span id="wedding-time-minutes"
                      class="d-inline-flex justify-content-center align-items-center border rounded time">204</span>
                    <br/>
                    <strong>{% trans %}minutes{% endtrans %} </strong>
                </div>
                <div class="col-sm-1">
                <span id="wedding-time-seconds"
                      class="d-inline-flex justify-content-center align-items-center border rounded time">204</span><br/>
                    <strong>{% trans %}seconds{% endtrans %} </strong>
                </div>
            </div>
        </div>
    </div>
</div>


{% block body %}
    {% set locale=app.request.locale %}

    {% include('content/welcome_'~locale~'.html.twig') %}

    <hr/>
    <span name="schedule" id="schedule">&nbsp;</span>
    {% include('content/schedule_'~locale~'.html.twig') %}

    <hr/>
    <span name="approach" id="approach">&nbsp;</span>
    {% include('content/approach_'~locale~'.html.twig') %}

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

<script>
    $(document).ready(function () {
        $('#wedding-time-days').countdown('08/08/2020 15:30:00', function (event) {
            $(this).html(event.strftime('%D'));

        });
        $('#wedding-time-hours').countdown('08/08/2020 15:30:00', function (event) {
            $(this).html(event.strftime('%H'));

        });
        $('#wedding-time-minutes').countdown('08/08/2020 15:30:00', function (event) {
            $(this).html(event.strftime('%M'));

        });
        $('#wedding-time-seconds').countdown('08/08/2020 15:30:00', function (event) {
            $(this).html(event.strftime('%S'));

        });


    });


</script>
</body>

</html>
